<span id="breadcrumb">
  <%= link_to '전국', pensions_path %>
	<% if params[:addr1] %>
		> <%= link_to params[:addr1], pensions_path(:addr1 => params[:addr1]) if params[:addr1] %>
	<% end %>
	<% if params[:addr2] %>
		> <%= link_to params[:addr2], pensions_path(:addr1 => params[:addr1], :addr2 => params[:addr2]) if params[:addr2] %>
	<% end %>
</span>
<p>
<% Pension.addrs.each do |addr| %>
	<%= params[:addr1] == addr ? content_tag(:strong, addr) : link_to(addr, pensions_path(:addr1 => addr)) %> |
<% end %>
</p>
<p>
<% Pension.sub_addrs(params[:addr1]).each do |sub_addr| %>
	<%= params[:addr2] == sub_addr ? content_tag(:strong, sub_addr) : link_to(sub_addr, pensions_path(:addr1 => params[:addr1], :addr2 => sub_addr)) %>
<% end %>
</p>