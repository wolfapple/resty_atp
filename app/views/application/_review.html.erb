<%= form_tag '/reviews', :method => :post do %>
  <%= hidden_field_tag "review[#{params[:controller].singularize}_id]", params[:id] %>
  <%= text_area_tag 'review[content]' %>
  <%= submit_tag "등록" %>
<% end %>

<ul id="review_list">
<% @reviews.each do |review| %>
  <li class="review"><%= review.content %> <%= link_to 'x', review_path(review, :type => params[:controller].singularize), :method => :delete %></li>
<% end %>
</ul>