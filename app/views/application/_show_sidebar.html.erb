<div class="friends-activities-box">
  <h3>이 지역 친구들의 활동</h3>
  <ul>
  <% 1.upto 3 do %>
    <li>
      <%= image_tag 'show_side_friend_id0000_face.png' %>
      <span>김풍기님이 고뱅이 펜션을..</span>
    </li>
  <% end %>
  </ul>
  <div class="footer"></div>
</div>

<div class="near-pensions-box">
  <h3>근처의 다른 펜션</h3>
  <ul>
  <% @near_by_pensions.each do |pension| %>
    <li>
      <table class="near-by-pensions">
        <tr>
          <td><%= link_to pension.title, pension, :class => 'name' %></td>
          <td><span class="like">좋아요(<%= pension.like_count %>)</span></td>
        </tr>
        <tr>
          <td><span title="<%= pension.addr %>"><%= pension.short_addr %></span></td>
          <td><a href="#" class="review">리뷰<%= pension.comments_count %></a></td>
        </tr>
      </table>
    </li>
  <% end %>
  </ul>
  <div class="footer"></div>
</div>

<div class="must_visit_banner">
  <a href="<%= pensions_path(:must_visit => true) %>">
    <h3>Must Visit By Resty</h3>
    <%= image_tag 'pension_01.jpg' %>
  </a>
</div>