<% if flash[:alert].present? %>
	$('#review-notice').html('<%= flash[:alert] %>');
<% else %>
	<% if params[:pension_id].present? %>
		$('#reviews-count').html('<%= "#{@pension.reviews.count}개의 리뷰가 있습니다." %>');
	<% else %>
		$('#reviews-count').html('<%= "#{@spot.reviews.count}개의 리뷰가 있습니다." %>');
	<% end %>
	if($('.review-item').length > 0) {
		$("<%= escape_javascript(render :partial => 'review', :locals => { :review => @review }) %>").insertBefore('.review-item:first')
	}
	else {
		$('#reviews').append("<%= escape_javascript(render :partial => 'review', :locals => { :review => @review }) %>");
	}
	$('#review_<%= @review.id %>').effect('highlight', {}, 3000);
	$('#review_content').val('');
<% end %>