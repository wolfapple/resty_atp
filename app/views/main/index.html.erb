<div id="main-category">
  <table>
    <% 0.upto(@areas.size / 2 - 1) do |i| %>
	  <tr>
	    <td>
	      <% area = @areas[i*2] %>
	      <%= link_to content_tag(:span, area.title, :class => 'local'), area_pensions_path(area) %>
	      <%= content_tag(:span, "(#{area.pensions_count})", :class => 'num') %>
  		  <br />
  		  <% area.sub_areas.main.each_with_index do |sub_area, idx| %>
  		    <%= link_to sub_area.title, sub_area_pensions_path(sub_area) %><%= ',' if idx < area.sub_areas.main.count - 1 %>
  		  <% end %>
		  </td>
		  <td>
		    <% area = @areas[i*2+1] %>
		    <%= link_to content_tag(:span, area.title, :class => 'local'), area_pensions_path(area) %>
		    <%= content_tag(:span, "(#{area.pensions_count})", :class => 'num') %>
  		  <br />
  		  <% area.sub_areas.main.each_with_index do |sub_area, idx| %>
  		    <%= link_to sub_area.title, sub_area_pensions_path(sub_area) %><%= ',' if idx < area.sub_areas.main.count - 1 %>
  		  <% end %>
  		</td>
    </tr>
    <% end %>
	</table>    
</div>

<% if current_user %>
<div id="main-facebook-activities" class="fb-login">
  <div class="fb-activity" data-site="resty.co.kr" data-app-id="267286263291604" data-width="350" data-height="225" data-header="true" data-linktarget="_parent" data-border-color="#E0E0E0"></div>
</div>
<div id="main-facebook-landmarks" class="fb-login">
  <div class="fb-recommendations" data-site="resty.co.kr" data-app-id="267286263291604" data-width="350" data-height="212" data-header="true" data-linktarget="_parent" data-border-color="#E0E0E0"></div>
</div>
<% else %>
<div id="main-facebook-activities" class="fb-logout"></div>
<div id="main-facebook-landmarks" class="fb-logout"></div>
<% end %>

<script type="text/javascript" charset="utf-8" src="/assets/jquery.nivo.slider.pack.js"></script>
<script type="text/javascript" charset="utf-8">
  $(window).load(function() {
  	$('#slider').nivoSlider({
  	  controlNav: false
  	});
  });
</script>
<div id="main-must-visit">
  <div id="main-must-visit-title"></div>
  <div id="slider" class="nivoSlider" style="width:352px;height:265px;">
  <% @must_visits.each do |mv| %>
    <%= link_to image_tag(mv.img.to_s, :title => "[#{mv.pension.sub_area.title}] #{mv.pension.title}"), pension_path(mv.pension) %>
  <% end %>
  </div>
</div>

<div id="main-themes">
  <ul>
  <% @themes.each_with_index do |theme, idx| %>
    <li><%= link_to content_tag(:div, theme.title, :class => "theme_#{idx+1}"), theme_pensions_path(theme) %></li>
  <% end %>
  </ul>
</div>

<div id="main-landmarks">
  <ul>
  <% @spots.each do |spot| %>
    <li>
      <%= "[#{spot.sub_area.title}]" %> <%= link_to spot.title, spot %> (<%= spot.pensions_count %>)
      <%= content_tag :span, 'season', :class => 'season' if spot.is_season %>
    </li>
  <% end %>
  </ul>
</div>