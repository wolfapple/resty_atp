<div id="sidebar">
  <%= render 'show_sidebar' %>
</div>

<div id="main_content">
  <div class="header">
    <%= render 'header' %>
  </div>
  <div id="show-content">
    <div class="title">
      <h2><%= @spot.title %></h2>
      <span>좋아요</span>
    </div>
    <div class="line-green"></div>
    <div class="body">
      <div id="spot-info-sum"><%= @spot.description %></div>
      <div id="spot-info-addr"><%= @spot.addr %></div>
      <div id="spot-info-phone"><%= @spot.phone %></div>
      <div id="spot-info-source">출처 : 한국관광공사</div>
      <div id="spot-info-start">
        <div id="findway-box">
          <input type="text" value="산정호수까지의 길을 찾아드립니다." name="findway" id="findway-word" />
          <input type="image" value="" src="/assets/header_searchbox_button.png" id="findway-button" />
        </div>
      </div>  
    </div>
    <div id="show-footer">
      <%= render 'map' %>
      <div class="line-green"></div>
    </div>
    <div id="show-review">
      <%= render 'review' %>
    </div>
  </div>
  <h2>펜션</h2>
  <div id="pension-list">
    <%= render 'pension_list' %>
  </div>
</div>